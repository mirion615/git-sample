<% if user_signed_in? %> 
  <%= current_user.nickname %>さん
  <ul>
    <li><%= link_to "マイページ", "/users/#{current_user.id}", class: "nickname" %></li>
    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout" %></li>
    <li><%= link_to "新規投稿", new_post_path %></li>
  </ul>
<% else %>
  <ul>
    <li><%= link_to 'ログイン', new_user_session_path, class:"sign-in"%></li>
    <li><%= link_to '新規登録', new_user_registration_path, class:"sign-up"%></li> 
  </ul>
<% end %>

<div class="d-flex align-items-center">
    <h1>投稿一覧</h1>
</div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">募集内容</th>
      <th scope="col">投稿者</th>
      <th scope="col">投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
            <td><%= post.text %></td>
            <td><%= post.user.nickname %></td>
            <td><%= post.created_at.to_s(:datetime_base) %></td>

<% if user_signed_in? %> 
   <%= current_user.nickname %>さん
     <li><%= link_to "マイページ", root_path, class: "nickname" %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout" %></li>
        <% @users.each do |user| %>
          <% if user.present? %>
            <li><%= link_to user.nickname, user_path(user.id), method: :get %></li>
          <% end %>
        <% end %>
                 <% else %>
                      <li><%= link_to 'ログイン', new_user_session_path, class:"sign-in"%></li>
                      <li><%= link_to '新規登録', new_user_registration_path, class:"sign-up"%></li> 
                  <% end %>
            <td><%= link_to "詳細" , post_path(post.id), method: :get %></td>

            <td><%= button_to "削除" , post_path(post.id), method: :delete %></td>
        </tr>
      <% end %>
  </tbody>

</table>
