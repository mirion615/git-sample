
<div class="contents s">
<p>ID<%= @user.id%></p>
<p>ニックネーム<%= @user.nickname %>さん</p>
<p>性別<%= @user.gender %></p>
<p>年齢<%= @user.age%></p>
</div>
<div class="contents u">
  <p><%= @nickname %>さんの投稿一覧</p>
  </div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">募集内容</th>
      <th scope="col">投稿者</th>
      <th scope="col">投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
            <td><%= post.text %></td>
            <td><%= post.user.nickname %></td>
            <td><%= post.created_at.to_s(:datetime_base) %></td>

            <td><%= link_to "詳細" , post_path(post.id), method: :get %></td>

            <td><%= button_to "削除" , post_path(post.id), method: :delete %></td>
        </tr>
      <% end %>
  </tbody>
</table>
  <div><%= link_to"トップページへ", root_path%></div>
  <%if current_user.id? && @user.id %>
    <%= link_to "プロフィール編集", root_path%>
  <%end%>

<% if current_user != @user %>
  <%= link_to 'Begin Chat', chat_path(@user.id) %>
<% end %> 

